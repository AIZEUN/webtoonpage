<h1>매치된 이벤트</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>이벤트</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platforms.each do |platform| %>
      <tr>
        <td><%= platform.user.email %></td>
        <td><%= platform.event.event_name %></td>
        <td><%= link_to 'Show', platform %></td>
