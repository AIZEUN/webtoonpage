<p id="notice"><%= notice %></p>

<h1>웹툰</h1>
<ul>
	<li>
		장르선택
	</li>
	<p>
		<%= link_to '개그, 일상', events_path %> | <%= link_to '판타지', events_path %> | <%= link_to '학원물', events_path %>
	</p>
</ul>

<table class="table table-boarded">
  <thead>
    <tr>
      <th>작가명</th>
      <th>웹툰</th>
      <th>장르</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @webtoons.each do |webtoon| %>
      <tr>
        <td><%= webtoon.writer %></td>
        <td><%= webtoon.webtoon_name %></td>
        <td><%= webtoon.gerne %></td>
        <td><%= button_to "웹툰구독", boards_path(board: { user_id: current_user.id, webtoon_id: webtoon.id}) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<ul>
	<p>
		<%= link_to '이벤트 확인', events_path %>
	</p>
</ul>


