<p id="notice"><%= notice %></p>

<h1>이벤트 종류</h1>

<table class="table table-boarded">
  <thead>
    <tr>
      <th>이벤트</th>
      <th>조건</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.event_name %></td>
        <td><%= event.structure %></td>
        <td><%= link_to '자세히', event %></td>
        <td><%= button_to '신청하기', platforms_path(platform: { user_id: current_user.id, event_id: event.id}) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

